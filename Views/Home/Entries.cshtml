@{
    ViewData["Title"] = "Entries";
}

<body style="background-color: #f1f4ff;">
    <div class="d-flex flex-row m-4 mb-0 mt-5 gap-3">
        <a asp-controller="Home" asp-action="Menu">
            <img src="~/images/blue-arrow.png" class="img-fluid align-items-center" style="width: 40px; height: 40px;"
                alt="Regresar" />
        </a>
    <h1 class="display-3 fw-bold" style="color: #000225;">Entradas</h1>
    </div>

    <form class="g-2">
        <div class="rounded-5 mt-3 m-3 pt-2 p-4" style="background-color: #000225; box-shadow: 5px 14px 10px rgba(1, 7, 27, 0.227)">
            <p class="text-white fs-5 mt-4">Escanee el código de barras de la tarima</p>
            <div class="d-flex flex-row align-items-center gap-2">
                <div class="form-floating w-75" style="box-shadow: 5px 10px 10px rgba(130, 138, 162, 0.163)">
                    <input type="text" class="form-control" id="barcodeInput" placeholder="">
                    <label for="barcodeInput">Código de barras</label>
                </div>
                <button type="submit" class="btn btn-primary rounded-4 fw-semibold fs-5 border-0"
                    style="background: linear-gradient(to top, #12776B, #25EAE0); color: #FFFFFF; height: 6vh; box-shadow: 5px 10px 10px rgba(130, 138, 162, 0.163)">
                    Enviar
                </button>
            </div>

            <div class="mt-4 text-center">
                <p style="color: #25EAE0;">Nombre del producto | Peso Kg / Número de Cajas</p>
            </div>
        </div>


        <div class="rounded-5 mt-2 m-3 pt-2 p-4" style="background-color: #000225; box-shadow: 5px 14px 10px rgba(1, 7, 27, 0.227)">
            <p class="text-white fs-5 mt-4">Escanee el código QR de la ubicación</p>
            <div class="d-flex flex-row align-items-center gap-2">
                <div class="form-floating w-75" style="box-shadow: 5px 10px 10px rgba(130, 138, 162, 0.163)">
                    <input type="text" class="form-control" id="qrInput" placeholder="">
                    <label for="qrInput">Código QR</label>
                </div>
                <button type="submit" class="btn btn-primary rounded-4 fw-semibold fs-5 border-0"
                    style="background: linear-gradient(to top, #12776B, #25EAE0); color: #FFFFFF; height: 6vh; box-shadow: 5px 10px 10px rgba(130, 138, 162, 0.163)">
                    Enviar
                </button>
            </div>

            <div class="mt-4 text-center">
                <p style="color: #25EAE0;">Pasillo, Estante, Nivel, Posición</p>
            </div>

        </div>

        <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary w-100 rounded-4 fw-semibold fs-5 border-0 m-4 mt-2"
            style="background: linear-gradient(to top, #12776B, #25EAE0); color: #FFFFFF; height: 6vh; box-shadow: 5px 14px 10px rgba(1, 7, 27, 0.227)">
            Aceptar
        </button>
        </div>
    </form>
</body>
