@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Index.css" />
</head>

<body class="container-fluid w-100 m-0 p-0 d-flex flex-column align-items-center justify-content-center position-relative">

    <div class="circle-container position-relative w-100">
        <div class="div-logo d-flex justify-content-center align-items-center position-absolute">
            <img src="~/images/ocean-leader-logo.png" class="logo img-fluid"
                alt="Logo de Ocean Leader" />
        </div>
    </div>

    <div class="form-container d-flex row justify-content-center text-center position-relative z-1 w-100">
        <div class="w-100">
            <h1 class="display-4 fw-semibold text-white mb-5" style="position: relative; z-index: 1;">
                Control de Almacén
            </h1>
            <form class="pt-3" style="position: relative; z-index: 1;">
                <div class="form-floating mb-4" style="box-shadow: 5px 20px 30px rgba(130, 138, 162, 0.163)">
                    <input type="text" class="form-control" id="floatingInput" placeholder="">
                    <label for="floatingInput">Usuario</label>
                </div>
                <div class="form-floating mb-5" style="box-shadow: 5px 20px 30px rgba(130, 138, 162, 0.163)">
                    <input type="password" class="form-control" id="floatingInputPassword" placeholder="">
                    <label for="floatingPassword">Contraseña</label>
                </div>
                <button type="submit" class="btn w-100 rounded-4 fw-semibold fs-5 mb-4 mt-4 border-0" style="background: linear-gradient(to top, #12776B, #25EAE0); color: #FFFFFF; height: 6vh; border: none; box-shadow: 5px 20px 30px rgba(130, 138, 162, 0.163)" asp-controller="Home" asp-action="Warehouses">
                    Iniciar sesión
                </button>
                <p class="text-white">¿Olvidaste tu contraseña?</p>
            </form>
        </div>
    </div>

</body>
</html>
